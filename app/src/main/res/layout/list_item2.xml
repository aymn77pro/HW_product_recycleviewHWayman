<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="200dp">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="132dp"
        android:layout_height="122dp"
        android:layout_margin="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/PName"
        android:layout_width="149dp"
        android:layout_height="18dp"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/imageView"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toTopOf="@id/imageView"
        app:layout_constraintVertical_bias="0.348" />

    <TextView
        android:id="@+id/PP"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView"
        app:layout_constraintTop_toBottomOf="@id/PName" />

    <Button
        android:id="@+id/Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="68dp"
        android:layout_marginTop="16dp"
        android:background="#9F9C9C"
        android:backgroundTint="#888787"
        android:text="buy"
        android:textColor="#FBFBFB"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/PP"
        app:layout_constraintTop_toBottomOf="@id/PP" />

    <ImageView
        android:id="@+id/image2"
        android:visibility="visible"
        android:layout_width="53dp"
        android:layout_height="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toTopOf="@+id/PName"
        app:layout_constraintStart_toEndOf="@+id/PName"
        app:srcCompat="@drawable/ic_baseline_star_rate_24" />

</androidx.constraintlayout.widget.ConstraintLayout>